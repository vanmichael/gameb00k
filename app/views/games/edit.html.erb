<% provide(:title, 'Edit this game') %>
<h1>Edit this game</h1>

<div class="row">
		<div class="span6 offset3">
			<%= form_for(@game) do |f| %>


				<%= f.label :actual_team1_score %>
				<%= f.text_field :actual_team1_score %>

				<%= f.label :actual_team2_score %>
				<%= f.text_field :actual_team2_score %>

				<%= f.label :winning_team %>
				<%= f.select(:description, options_for_select([
										["#{@game.team_one}", '1'],
										["#{@game.team_two}", '2']
										])) %>

				<%= f.label :team_one %>
				<%= f.text_field :team_one %>

				<%= f.label :team_two %>
				<%= f.text_field :team_two %>

				<%= f.label :description, "Type of Sport" %>
				<%= f.select(:description, options_for_select([
										['Baseball', 'Baseball'],
										['Basketball', 'Basketball'],
										['Football', 'Football'],
										['Soccer', 'Soccer'],
										['Tennis', 'Tennis']
										])) %>
				<%= f.label :date, "Date of Event" %>
				<%= f.date_select :date, :order => [:day, :month, :year] %>

				<%= f.label :icon_id, "Choose a sports icon" %>
				<%= f.text_field :icon_id %>
				<div>
						<% @icons.each do |i| %>
						<%= show_image i, :thumb %>
						<% end %>
				</div>

				<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
			<% end %>
		</div>
</div>
	