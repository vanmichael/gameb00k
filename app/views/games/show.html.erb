<% provide(:title, @game.name) %>
<h1> <%= @game.name %> </h1>
<div class="row">
	<aside class="span7">

		<table>
		<tr>
			<th rowspan="2"> 
				 <%= show_icon_for @game.icon_id, :thumb   %>
			</th>
			<td>
				<h3> <%= game_name(@game) %> </h3>
			</td>
		</tr>
		<tr>
			<td>
		Date of Event:  <%= @game.date %>
			</td>
		</tr>
		</table>		
	</aside>

	<div class="span5">
		<%= render "shared/new_pool_form" %>
	</div>
</div>

<div class="row">
		<section>
			<div class="center">
			<%= link_to "Create a New Pool", new_game_pool_path(@game), class: "btn btn-large btn-primary" %>
			</div>
		</section>
		<section>
			<div class="span10">
				<h3>Pools (<%= @game.pools.count %>)</h3>
				<% if @game.pools.any? %>
					<ol>
					<%= render @game.pools %>
					</ol>
				<% end %>
			</div>
		</section>
</div>
